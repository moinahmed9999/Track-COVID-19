<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myLightBlue"
    tools:context=".Fragments.NavigationDrawer.AboutDeveloperFragment">


    <TextView
        android:id="@+id/developed_by_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:fontFamily="serif"
        android:text="Developed by"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/moinahmed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/developed_by_tv"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Moin Ahmed"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/moinahmed"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="COE | 2nd Year | DTU'22"
        android:textColor="@android:color/black"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="136dp"
        android:layout_height="136dp"
        android:layout_alignTop="@id/developed_by_tv"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="16dp"
        android:layout_toRightOf="@id/moinahmed"
        android:src="@android:drawable/btn_dialog" />

    <RelativeLayout
        android:id="@+id/fb_insta_linkedin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/description"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp">

        <ImageView
            android:id="@+id/fb"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:background="@android:color/white"
            android:src="@android:drawable/btn_dialog" />

        <ImageView
            android:id="@+id/insta"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_toRightOf="@id/fb"
            android:src="@android:drawable/btn_dialog" />

        <ImageView
            android:id="@+id/linkedin"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_toRightOf="@id/insta"
            android:background="@android:color/white"
            android:src="@android:drawable/btn_dialog" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fb_insta_linkedin"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/gmail"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:src="@android:drawable/btn_dialog" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:layout_toRightOf="@id/gmail"
            android:text="moinahmed_bt2k18@dtu.ac.in"
            android:textColor="@android:color/black" />
    </RelativeLayout>
</RelativeLayout>